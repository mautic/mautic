{% if 'index' == tmpl %}
    {% extends 'MauticInstallBundle:Install:content.html.twig' %}
{% endif %}

<div class="panel-heading">
    <h2 class="panel-title">
        {{ 'mautic.install.heading.email.configuration'|trans }}
    </h2>
</div>
<div class="panel-body">
    {{ form_start(form) }}
    <h4 class="mb-10">{{ 'mautic.install.email.header.emailfrom'|trans }} <i class="ml-5 fa fa-info-circle" data-toggle="tooltip" title="{{ 'mautic.install.email.subheader.emailfrom'|trans }}"></i></h4>

    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.mailer_from_name) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.mailer_from_email) }}
        </div>
    </div>

    <h4 class="mb-10 mt-10">
        {{ 'mautic.install.email.header.spooler'|trans }} <i class="ml-5 fa fa-info-circle" data-toggle="tooltip" title="{{ 'mautic.install.email.subheader.spooler'|trans }}"></i>
    </h4>
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.mailer_spool_type) }}
        </div>

        <div class="col-sm-6">
            {{ form_row(form.mailer_transport) }}
        </div>
    </div>
    <div id="smtpSettings">
        <div class="row">
            <div class="col-sm-9">
                {{ form_row(form.mailer_host) }}
            </div>
            <div class="col-sm-3">
                {{ form_row(form.mailer_port) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.mailer_encryption) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.mailer_auth_mode) }}
            </div>
        </div>
    </div>
    <div id="amazonRegion">
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.mailer_amazon_region) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.mailer_amazon_other_region) }}
            </div>
        </div>
    </div>
    <div id="SparkpostRegion">
        <div class="row">
            <div class="col-sm-12">
                {{ form_row(form.mailer_sparkpost_region) }}
            </div>
        </div>
    </div>
    <div id="authDetails">
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.mailer_user) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.mailer_password) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_row(form.mailer_api_key) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.messenger_type) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.messenger_transport) }}
            </div>
        </div>
    </div>
    <div class="row mt-20">
        <div class="col-sm-9">
            {{- include('MauticInstallBundle:Install:navbar.html.twig', {'step' : index, 'count' : count, 'completedSteps' : completedSteps}) -}}
        </div>
        <div class="col-sm-3">
            {{ form_row(form.buttons) }}
        </div>
    </div>
    {{ form_end(form) }}
    <script>
        Mautic.initializeFormFieldVisibilitySwitcher('install_email_step');
    </script>
</div>
