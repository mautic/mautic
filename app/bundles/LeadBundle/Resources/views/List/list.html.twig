        'templateButtons': {'new': true},
        'routeBase': 'segment',
        'langVar': 'lead.list',
        'tooltip': 'mautic.lead.lead.segment.add.help',
  }) }}
{% endblock %}

{% block content %}
  {% set listCommand = 'mautic.lead.lead.searchcommand.list'|trans %}

