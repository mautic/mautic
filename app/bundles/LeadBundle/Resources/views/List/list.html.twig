                'searchValue': searchValue,
                'searchHelp': 'mautic.lead.list.help.searchcommands',
                'action': currentRoute,
                'filters': filters|default([]),
        }) }}
        <div class="page-list">
  {% endif %}

  {{ include('@MauticLead/List/_list.html.twig') }}

  {% if isIndex %}
        </div>
    </div>
  {% endif %}
{% endblock %}
